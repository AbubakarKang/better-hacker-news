{
    "manifest_version": 2,
    "name": "Better Hacker News",
    "version": "1.0.0",
    "description": "Enhance the UI (User Interface) for the Hacker News website.",
    "icons": {
        "16": "icons/icon16.png"
    },
    "page_action": {
        "default_icon": {
            "16": "icons/icon16_2.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["*://news.ycombinator.com/*"],
            "js": ["js/home-page.js"],
            "run_at": "document_end"
        }
    ]
}